@page
@model Acuedify.Pages.Folders.EditModel

@{
    ViewData["Title"] = "Edit Folder";
}

<link rel="stylesheet" href="~/css/FolderForm.css" />

<div class="folder-form-container">
    <h1>Edit</h1>
    <h4>Folder</h4>
    <hr />
    <div class="folder-form">
        <form method="post" asp-page="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Folder.Id" />
            <input type="hidden" asp-for="Folder.UserId" />
            <input type="hidden" asp-for="Folder.Quizzes" />

            <div class="form-group">
                <label class="control-label">Folder name</label>
                <input asp-for="Folder.Name" class="form-control" />
                <span asp-validation-for="Folder.Name" class="text-danger"></span>
            </div>

            <div class="form-group button-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="DeleteFolder" asp-route-folderId="@Model.Folder.Id" class="btn btn-danger">Delete</a>
            </div>
        </form>
    </div>

