@model Acuedify.Models.Question
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<body>
    <div class="flashcard-container">
        <div class="flashcard" onclick="rotateCard(this)">
            <div class="card">
                <div class="term" id="term" style="user-select: none;">
                    @Model.Term
                </div>
                <div class="definition" id="definition" style="user-select: none;">
                    @Model.Definition
                </div>
            </div>
        </div>
    </div>
</body>