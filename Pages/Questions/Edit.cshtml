@page
@model Acuedify.Pages.Questions.EditModel
@* @model Acuedify.Models.Question *@

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="question.Id" />
            <input type="hidden" asp-for="question.UserId" />
            <div class="form-group">
                <label asp-for="question.Term" class="control-label"></label>
                <input asp-for="question.Term" class="form-control" />
                <span asp-validation-for="question.Term" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="question.Definition" class="control-label"></label>
                <input asp-for="question.Definition" class="form-control" />
                <span asp-validation-for="question.Definition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="question.QuizId" class="control-label"></label>
                <select asp-for="question.QuizId" class="form-control" asp-items="Model.QuizIds"></select>
                <span asp-validation-for="question.QuizId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-page="Edit" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Quizzes/Edit" asp-route-quizId="@Model.question.QuizId">Back to Quiz</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
